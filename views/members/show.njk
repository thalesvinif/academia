{% extends "layout.njk" %}

{% block content %}

    <div class="card">
        <section class="avatar" style="background: url({{member.avatar_url}}) no-repeat center center / cover"></section>
        <section class="details">

            <h3>Detalhes</h3>

            <div class="item">
                <div>Membro</div>
                <div>{{ member.name }}</div>
            </div>

            <div class="item">
                <div>Email</div>
                <div>{{ member.mail }}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{ member.age }}</div>
            </div>

            <div class="item">
                <div>Sexo</div>
                <div>{{ "Masculino" if member.gender == "M" else "Feminino" }}</div>
            </div>

            <div class="item">
                <div>Modalidades</div>
                <div>
                    {% for modalidade in member.modalidades %}
                    <span>{{ modalidade }}</span>
                    {% endfor %}
                </div>
            </div>

            <div class="item">
                <div>Membro desde</div>
                <div>{{ member.created_at }}</div>
            </div>

            <a href="/members/{{ member.id }}/edit" class="button">Editar</a>

        </section>
    </div>

{% endblock content %}